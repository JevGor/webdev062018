extends ../auth.layout.pug

block content
  section.header
    ul.socials
      - var socials = ['vk','gh','in']
      each item in socials
        li.socials__item
          a(href="" class='socials__link_${item}').soclials__link

  section.hero
    .hero__container
      .section-title
        .user
          .user__avater
            img(src="assets/images/content/user.jpg", alt="").user-desc__pic-elem
          .user__info
            .user__name Jev Goronin
            .user__desc Personal website
    .hero__btn
      .arrow-down
    
    .triangles

  
  section.about
    .about__col.about__col_bg_white
      .about__triangle.svg-triangle_fill-white
      .about-desc
        .about__title
          h2.title About me
        .user-desc__pic
          img(src="assets/images/content/user-full.jpg", alt="").user-desc__pic-elem
        .user-desc__info
          h2.user-desc__title
            .subtitle Who am Iframe
          .user-desc__text
